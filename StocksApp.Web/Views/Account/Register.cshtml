@model RegisterRequest
@{
    ViewBag.Title = "Register";
}

<div class="container">
    <div class="header">
        <h1>Register</h1>
    </div>

    <div class="page-content full-size-height">
        <div class="center-box">
            <div class="box white-back">
                <h2 class="text-blue border-bottom pb">Registration Form</h2>

                <form asp-controller="Account" asp-action="Register" method="post" class="flex flex-direction-vertical">
                    <div class="form-field flex">
                        <div class="form-label">
                            <label asp-for="FullName" class="text-grey">Full Name</label>
                        </div>
                        <div>
                            <input asp-for="FullName" class="form-input" />
                            <span asp-validation-for="FullName" class="text-red"></span>
                        </div>
                    </div>

                    <div class="form-field flex">
                        <div class="form-label">
                            <label asp-for="Email" class="text-grey"></label>
                        </div>
                        <div>
                            <input asp-for="Email" class="form-input" />
                            <span asp-validation-for="Email" class="text-red"></span>
                        </div>
                    </div>

                    <div class="form-field flex">
                        <div class="form-label">
                            <label asp-for="Phone" class="text-grey"></label>
                        </div>
                        <div>
                            <input asp-for="Phone" class="form-input" />
                            <span asp-validation-for="Phone" class="text-red"></span>
                        </div>
                    </div>

                    <div class="form-field flex">
                        <div class="form-label">
                            <label asp-for="Password" class="text-grey"></label>
                        </div>
                        <div>
                            <input asp-for="Password" class="form-input" />
                            <span asp-validation-for="Password" class="text-red"></span>
                        </div>
                    </div>

                    <div class="form-field flex">
                        <div class="form-label">
                            <label asp-for="ConfirmPassword" class="text-grey"></label>
                        </div>
                        <div>
                            <input asp-for="ConfirmPassword" class="form-input" />
                            <span asp-validation-for="ConfirmPassword" class="text-red"></span>
                        </div>
                    </div>

                    <div class="form-field flex">
                        <div class="form-label">
                            <label asp-for="RememberMe" class="text-grey"></label>
                        </div>
                        <div>
                            <input asp-for="RememberMe" class="mr" />
                            <label asp-for="RememberMe" class="text-grey">Keep me signed in</label>
                        </div>
                    </div>

                    <div class="button-panel text-center">
                        <button type="submit" class="button button-green-back">Register</button>
                        <a asp-controller="Account" asp-action="Login" class="button ml">Sign In</a>
                    </div>

                    <div asp-validation-summary="All" class="text-red text-center mt"></div>
                </form>
            </div>
        </div>
    </div>
</div>

@section scripts
{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js" asp-fallback-test="window.jQuery" asp-fallback-src="~/jquery.min.js"></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.4/jquery.validate.min.js" asp-fallback-test="window.jQuery.validator" asp-fallback-src="~/jquery.validate.min.js"></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js" asp-fallback-test="window.jQuery.validator.unobstrusive" asp-fallback-src="~/jquery.validate.unobtrusive.min.js"></script>
}